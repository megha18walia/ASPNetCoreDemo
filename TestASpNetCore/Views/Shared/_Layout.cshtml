<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div style="width:100%;background-color:antiquewhite;float:left">
        <div style="width:20%;border:5px solid red;float:left">Home</div>
        <div style="width:20%;border:5px solid red;float:left">About Us</div>
        <div style="width:20%;border:5px solid red;float:left">Contact Us</div>
        <div style="width:20%;border:5px solid red;float:left">Help</div>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        @RenderSection("Footer", required:false)
        <p style="font-size:small">@DateTime.Now</p>
            @await  Component.InvokeAsync("Greeter")

        @if(User.Identity.IsAuthenticated)
        {
            foreach (var identity in User.Identities)
            {
            <h3>@identity.Name</h3>
            <ul>
                @foreach(var claim in identity.Claims)
                {
                    <li>
                        @claim.Type - @claim.Value
                    </li>
                }
            </ul>
            }
        }
    </footer>
</body>
</html>
